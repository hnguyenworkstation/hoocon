<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_weight="3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/account_banned_warn"
        android:id="@+id/journal_title"
        android:textStyle="bold"
        android:textSize="@dimen/journal_medium_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_dark_color"/>

    <TextView
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a simple ad text This is a simple ad text This is a simple ad text This is a simple ad text This is a simple ad text
This is a simple ad text This is a simple ad text"
        android:id="@+id/journal_message"
        android:textSize="@dimen/journal_small_text"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black_alpha_30"/>
</LinearLayout>