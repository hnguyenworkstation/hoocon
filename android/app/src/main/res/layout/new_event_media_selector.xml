<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12"
        android:orientation="horizontal"
        android:id="@+id/event_image_picker">

        <ImageView
            android:layout_margin="@dimen/margin_4"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/event_media_picker_size"
            android:layout_height="@dimen/event_media_picker_size"
            android:id="@+id/event_image_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/event_image_icon"
            android:layout_toStartOf="@+id/right1"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/event_image_name"
                style="@style/RowItemTitleRecycle"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_marginStart="@dimen/margin_12"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/right1"
            android:src="@drawable/ic_right_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_12"
        android:orientation="horizontal"
        android:id="@+id/event_video_picker">

        <ImageView
            android:layout_margin="@dimen/margin_4"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/event_media_picker_size"
            android:layout_height="@dimen/event_media_picker_size"
            android:id="@+id/event_video_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/event_video_icon"
            android:layout_toStartOf="@+id/right2"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/event_video_name"
                style="@style/RowItemTitleRecycle"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_marginStart="@dimen/margin_12"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/right2"
            android:src="@drawable/ic_right_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_12"
        android:orientation="horizontal"
        android:id="@+id/event_location_picker">

        <ImageView
            android:layout_margin="@dimen/margin_4"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/event_media_picker_size"
            android:layout_height="@dimen/event_media_picker_size"
            android:id="@+id/event_location_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/event_location_icon"
            android:layout_toStartOf="@+id/right3"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/event_location_name"
                style="@style/RowItemTitleRecycle"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_marginStart="@dimen/margin_12"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/right3"
            android:src="@drawable/ic_right_white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_12"
        android:layout_marginEnd="@dimen/margin_12"
        android:layout_marginBottom="@dimen/margin_12"
        android:orientation="horizontal"
        android:id="@+id/event_gif_picker">

        <ImageView
            android:layout_margin="@dimen/margin_4"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/event_media_picker_size"
            android:layout_height="@dimen/event_media_picker_size"
            android:id="@+id/event_gif_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/event_gif_icon"
            android:layout_toStartOf="@+id/right4"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/event_gif_name"
                style="@style/RowItemTitleRecycle"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_marginStart="@dimen/margin_12"
            android:layout_width="@dimen/common_icon_size"
            android:layout_height="@dimen/common_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/right4"
            android:src="@drawable/ic_right_white"/>
    </RelativeLayout>

</LinearLayout>